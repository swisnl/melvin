{
    "name": "swisnl/melvin",
    "type": "library",
    "description": "NDW Melvin API client",
    "keywords": [
        "swisnl",
        "ndw",
        "melvin",
        "api"
    ],
    "homepage": "https://github.com/swisnl/melvin",
    "license": "MIT",
    "authors": [
        {
            "name": "Jasper Zonneveld",
            "email": "jasper@swis.nl",
            "homepage": "https://www.swis.nl",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=7.4",
        "ext-json": "*",
        "jmikola/geojson": "^1.0",
        "myclabs/php-enum": "^1.7",
        "php-http/discovery": "^1.0",
        "psr/http-client-implementation": "^1.0",
        "psr/http-factory-implementation": "^1.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "guzzlehttp/guzzle": "^7.3",
        "guzzlehttp/psr7": "^2.0",
        "phpunit/phpunit": ">=8.0",
        "swisnl/php-http-fixture-client": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "Swis\\Melvin\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Swis\\Melvin\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "php-cs-fixer fix --dry-run -v",
        "fix-style": "php-cs-fixer fix"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
